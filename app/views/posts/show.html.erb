<p id="notice"><%= notice %></p>

<p>
  <% if @post.image? %>
    <div style="text-align: center"><%= image_tag @post.image.url, class: "img-responsive" %></div>
  <% else %>
    <div style="text-align: center">画像がありません</div>
  <% end %>
</p>

<p>
  <strong>Type:
  <%= @post.schooltype %></strong>
</p>

<p>
  <strong>Title:
  <%= @post.title %></strong>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>URL:</strong>
  <a href="<%= @post.url %>"><%= @post.url %></a>
</p>

<p>
  <strong>〒:</strong>
  <%= @post.postcode %>
</p>

<p>
  <strong>Address:</strong>
  <%= @post.address %>
</p>

<p>
<%= render 'posts/tag_list', tag_list: @post.interest_list %>
</p>

<br>
<br>

<% if user_signed_in? %>
<% if current_user.id == @post.user.id %>
	<%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Destroy', @post, method: :delete, data: {
		confirm: 'Are you sure?' } %> |
<% end %>
<% end %>

<%= link_to 'Back', posts_path %>
